<%= nested_form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :picks do |pick_form| %>
    <p>Pick</p>
    <%= pick_form.label :weight %>
    <%= pick_form.text_field :weight %>
    <%= pick_form.link_to_remove "Remove this pick" %>
  <% end %>
<p><%= f.link_to_add "Add a pick", :picks %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
